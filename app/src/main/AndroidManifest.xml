<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jrubenfun.a3ejfragments">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/autobackup">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".acerca"
            android:parentActivityName=".MainActivity"
            android:label="Biografia"
            android:theme="@style/AppTheme3"
            />

        <activity android:name=".contacto"
            android:parentActivityName=".MainActivity"
            android:label="Contacto"
            android:theme="@style/AppTheme3"
            />

        <activity android:name=".ListaMascotas"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme3"
            >



        </activity>



    </application>

</manifest>